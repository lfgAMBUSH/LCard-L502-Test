<Window x:Class="TestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel>
        <Label DockPanel.Dock="Top">Логические каналы</Label>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="channel1" Header="Первый канал">
                <MenuItem Header="Канал">
                    <ComboBox x:Name="cbox_chn_channel_1"></ComboBox>
                </MenuItem>
                <MenuItem Header="Режим">
                    <ComboBox x:Name="cbox_chn_mode_1"></ComboBox>
                </MenuItem>
                <MenuItem Header="Диапазон">
                    <ComboBox x:Name="cbox_chn_range_1"></ComboBox>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="channel2" Header="Второй канал">
                <MenuItem Header="Канал">
                    <ComboBox x:Name="cbox_chn_channel_2"></ComboBox>
                </MenuItem>
                <MenuItem Header="Режим">
                    <ComboBox x:Name="cbox_chn_mode_2"></ComboBox>
                </MenuItem>
                <MenuItem Header="Диапазон">
                    <ComboBox x:Name="cbox_chn_range_2"></ComboBox>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="channel3" Header="Третий канал">
                <MenuItem Header="Канал">
                    <ComboBox x:Name="cbox_chn_channel_3"></ComboBox>
                </MenuItem>
                <MenuItem Header="Режим">
                    <ComboBox x:Name="cbox_chn_mode_3"></ComboBox>
                </MenuItem>
                <MenuItem Header="Диапазон">
                    <ComboBox x:Name="cbox_chn_range_3"></ComboBox>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="channel4" Header="Четвертый канал">
                <MenuItem Header="Канал">
                    <ComboBox x:Name="cbox_chn_channel_4"></ComboBox>
                </MenuItem>
                <MenuItem Header="Режим">
                    <ComboBox x:Name="cbox_chn_mode_4"></ComboBox>
                </MenuItem>
                <MenuItem Header="Диапазон">
                    <ComboBox x:Name="cbox_chn_range_4"></ComboBox>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="channel5" Header="Пятый канал">
                <MenuItem Header="Канал">
                    <ComboBox x:Name="cbox_chn_channel_5"></ComboBox>
                </MenuItem>
                <MenuItem Header="Режим">
                    <ComboBox x:Name="cbox_chn_mode_5"></ComboBox>
                </MenuItem>
                <MenuItem Header="Диапазон">
                    <ComboBox x:Name="cbox_chn_range_5"></ComboBox>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Подключенные модули">
                <ComboBox x:Name="cbox_serial_list"></ComboBox>
            </MenuItem>
        </Menu>
        <Menu DockPanel.Dock="Top">
            <TextBox x:Name="data_lch_1" Width="78" IsReadOnly="True"></TextBox>
            <TextBox x:Name="data_lch_2" Width="78" IsReadOnly="True"></TextBox>
            <TextBox x:Name="data_lch_3" Width="78" IsReadOnly="True"></TextBox>
            <TextBox x:Name="data_lch_4" Width="78" IsReadOnly="True"></TextBox>
            <TextBox x:Name="data_lch_5" Width="78" IsReadOnly="True"></TextBox>
        </Menu>
        <Grid>
            <Button x:Name="btnOpen" Content="Установить соединение?" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Click="btnOpen_Click" Width="180" Height="44"/>
            <Button x:Name="btnStart" Content="Старт" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Click="btnStart_Click" Height="88" Width="88"/>
            <Button x:Name="btnStop" Content="Стоп" HorizontalAlignment="Left" Margin="103,185,0,0" VerticalAlignment="Top" Click="btnStop_Click" Height="88" Width="88"/>
            <Button x:Name="btnRefreshSerialList" Content="Обновить список подкл. модулей" HorizontalAlignment="Left" Margin="10,278,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.545,0.026" Click="btnRefreshSerialList_Click" Width="181" FontSize="11"/>
            <TextBox x:Name="set_adc_freq_textbox" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="set_lch_freq_textbox" HorizontalAlignment="Left" Margin="10,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Задать частоту сбора АЦП" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Задать частоту обработки логического канала" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        </Grid>
    </DockPanel>

</Window>
